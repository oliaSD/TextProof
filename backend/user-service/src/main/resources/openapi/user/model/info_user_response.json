{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Ответ на получение информации о пользователе в системе",
  "properties": {
    "username": {
      "type": "string",
      "description": "Имя пользовтаеля для входа",
      "example": "olga"
    },
    "firstName": {
      "type": "string",
      "description": "Имя пользователя",
      "example": "Ольга"
    },
    "lastName": {
      "type": "string",
      "description": "Фамилия пользователя",
      "example": "Семерник"
    },
    "surname": {
      "type": "string",
      "description": "Отчество пользователя",
      "example": "Дмитриевна"
    },
    "groupNumber": {
      "type": "string",
      "description": "Номер группы",
      "example": "114302"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Электронная почта пользователя",
      "example": "semernik.olga@bsuir.by"
    },
    "type": {
      "type": "string",
      "description": "Тип пользователя",
      "enum": [
        "STUDENT",
        "TEACHER",
        "ADMIN"
      ],
      "default": "STUDENT"
    }
  },
  "required": [
    "username",
    "firstName",
    "lastName",
    "type",
    "email"
  ]
}
